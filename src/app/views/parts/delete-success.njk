{% call cards.success('Deletado com sucesso!') %}

    {% if student %}
        <a href="/students">Menu Student</a>
    {% else%}
        <a href="/teachers">Menu Teachers</a>
    {% endif %}
    

{% endcall %}

<script src="/lottie.min.js" type="text/javascript"></script>
<script>
    const element = document.querySelector('.success-lottie')
    lottie.loadAnimation({
    container: element, // the dom element that will contain the animation
    renderer: 'svg',
    loop: false,
    autoplay: true,
    path: '/5474-aashishdeleteanimation.json' // the path to the animation json
    });
</script>

{% endblock %}